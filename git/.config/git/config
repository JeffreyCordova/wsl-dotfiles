[core]
    editor = nvim
[user]
    name = Jeffrey Cordova
    email = jeffcordova@protonmail.com

[push]
    default = simple
[merge]
    tool = vimdiff
    ff = only
[mergetool]
    prompt = false
[mergetool "nvimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED \
               -c '$wincmd w' -c 'wincmd J'
[diff]
    prompt = false
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE

[color]
    ui = auto
[color "diff"]
    plain = normal
    meta = bold
    frag = cyan bold
    old  = red bold
    new = green bold
    commit = yellow bold
    whitespace = black red
[color "branch"]
    current = green bold
    local = normal
    remote = red bold
    plain = normal
[color "status"]
    header = normal
    added = red bold
    updated = green bold
    changed = yellow bold
    untracked = magenta bold
    nobranch = red
[color "grep"]
    match = yellow bold
[color "interactive"]
    prompt = normal
    header = black bold
    help = magenta bold
    error = red bold

[alias]
    a = add
    c = commit
    cm = commit -m
    s = status -s
    ls = log --graph --date=relative \
        --pretty=tformat:'%C(auto)%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an)%Creset %Cblue(%ad)%Creset'
    dt = difftool
    dtc = difftool --cached
    fff = flow feature finish
    ffs = flow feature start

[url "https://github/"]
    insteadOf = "gh:"
[url "git@github.com:"]
    pushInsteadOf = "gh:"

[url "https://aur.archlinux.org/"]
    insteadOf = "aur:"
[url "ssh+git:://aur4.archlinux.org/"]
    pushInsteadOf = "aur:"
